{
  "name": "webpack-boilerplate",
  "version": "1.0.0",
  "description": "Webpack 4 Boilerplate",
  "engines": {
    "node": "12.x.x",
    "npm": "6.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stefanfrede/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": {
    "name": "Stefan Frede",
    "email": "contact@frede.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefanfrede/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/stefanfrede/webpack-boilerplate",
  "browserslist": [
    "defaults"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,md,html,css}": "prettier --write",
    "*.css": "stylelint --fix",
    "*.js": "eslint --fix"
  },
  "sideEffects": false,
  "scripts": {
    "serve": "serve --no-clipboard --listen 8080 dist",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "start": "nodemon --watch webpack.* --exec \"wp --mode development\"",
    "build": "wp --mode production",
    "lint": "run-s lint:eslint lint:prettier lint:stylelint",
    "lint:eslint": "eslint --ext .js --ext .html src/",
    "lint:prettier": "prettier --list-different \"src/**/*.js\"",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browserslist": "^4.14.5",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.10",
    "dotenv-webpack": "^3.0.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.1.0",
    "git-revision-webpack-plugin": "^3.0.6",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "image-webpack-loader": "^7.0.1",
    "lint-staged": "^10.4.0",
    "lit-html": "^1.3.0",
    "mini-css-extract-plugin": "^0.11.2",
    "mini-html-webpack-plugin": "^3.0.7",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^4.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "purgecss-webpack-plugin": "^3.0.0",
    "serve": "^11.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "tailwindcss": "^1.8.10",
    "terser-webpack-plugin": "^4.2.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-merge": "^5.1.4",
    "webpack-nano": "^1.0.0",
    "webpack-plugin-serve": "^1.0.1",
    "webpackbar": "^4.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "canvas-confetti": "^1.3.0",
    "core-js-pure": "^3.6.5"
  }
}
